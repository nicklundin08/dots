# and in the NixOS manual (accessible by running ‘nixos-help’).
{
  inputs,
  outputs,
  pkgs,
  ...
}: {
  services.jellyfin = {
    enable = true;
    openFirewall = true;
  };
  environment.systemPackages = [
    pkgs.jellyfin
    pkgs.jellyfin-web
    pkgs.jellyfin-ffmpeg
  ];
}
